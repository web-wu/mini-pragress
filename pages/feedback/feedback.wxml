<view class="tab">
    <view class="tab_item {{item.isActive ? 'active' : ''}}" wx:for="{{tab}}" wx:key="id" bindtap="handleCahngeItem" data-index="{{index}}">{{item.title}}</view>
</view>
<view class="main">
    <view class="title">问题种类</view>
    <view class="classify_item">
        <text>功能建议</text>
        <text>购买遇到问题</text>
        <text>性能问题</text>
        <text>其他</text>
    </view>
    <view class="requent">
      <textarea placeholder="请描述一下您的问题"></textarea>
      <view class="upimg">
        <view class="img_btn">+</view>
      </view>
    </view>
    <view class="submit_btn_wrap">
      <button type="primary">
        <icon class="" type="success_no_circle" size="23" color="white"></icon>
        提交
      </button>
    </view>
</view>